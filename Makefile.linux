#
# Adjust SSH below to suit.
#
# $Id: Makefile.src,v 1.18 2005/03/23 02:05:12 harding Exp $
#

VER=1.3

SSH=		/usr/bin/ssh
PREFIX?=	/usr/local
MAN_PREFIX?=	/usr/local

CFLAGS=		-Wall -D"SSH_PATH=\"$(SSH)\""\
		-D"VER=\"$(VER)\""
OFILES=		autossh.o
LIBS=

TARGET=		autossh

all:		$(TARGET)


$(TARGET):	$(OFILES)
		$(CC) -o $(TARGET) $(OFILES) $(LIBS)

clean:
		- /bin/rm -f *.o *.a *.core *~

allclean:	clean
		- /bin/rm -f $(TARGET)

install:	$(TARGET)
		mkdir -p -m 755 ${PREFIX}/bin
		mkdir -p -m 755 ${PREFIX}/share/doc/autossh
		mkdir -p -m 755 ${PREFIX}/share/doc/autossh/examples
		mkdir -p -m 755 ${MAN_PREFIX}/man/man1
		cp $(TARGET) ${PREFIX}/bin
		cp CHANGES README ${PREFIX}/share/doc/autossh
		cp autossh.host ${PREFIX}/share/doc/autossh/examples
		cp rscreen ${PREFIX}/share/doc/autossh/examples
		cp autossh.1 ${MAN_PREFIX}/man/man1
		chmod 755 ${PREFIX}/bin/$(TARGET)
		chmod 644 ${PREFIX}/share/doc/autossh/CHANGES
		chmod 644 ${PREFIX}/share/doc/autossh/README
		chmod 644 ${PREFIX}/share/doc/autossh/examples/autossh.host 
		chmod 644 ${PREFIX}/share/doc/autossh/examples/rscreen
		chmod 644 ${MAN_PREFIX}/man/man1/autossh.1 
